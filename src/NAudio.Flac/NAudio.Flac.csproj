<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>BunLabs.NAudio.Flac</PackageId>
    <Authors>Vivelin</Authors>
    <Company>BunLabs</Company>
    <Description>A FLAC library for NAudio &gt;= 2.0</Description>
    <PackageLicenseExpression>MS-PL</PackageLicenseExpression>
    <Version>2.0.0</Version>
    <RepositoryUrl>https://github.com/BunLabs/NAudio.Flac</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReleaseNotes>- Ported NAudio.Flac to .NET Standard 2.0
- Changed dependency from NAudio 1 to NAudio.Core 2
- Replaced System.Drawing references to raw byte arrays
- Removed functionality that could download external URLs and decode them automatically</PackageReleaseNotes>
    <PackageProjectUrl>https://github.com/BunLabs/NAudio.Flac</PackageProjectUrl>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NAudio.Core" Version="2.0.0" />
  </ItemGroup>

</Project>
